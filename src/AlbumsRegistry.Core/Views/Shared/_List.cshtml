@model IEnumerable<AlbumsRegistry.Core.Models.INameCityModel>

<table class="table">
    <tr>
        <th>
            @Strings.General_Headers_Name
        </th>
        <th>
            @Strings.General_Headers_City
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                @Html.ActionLink(Strings.General_Actions_Edit, "Edit", new {id = item.Id})
            </td>
        </tr>
    }

</table>