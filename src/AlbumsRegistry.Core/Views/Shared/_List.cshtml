@model IEnumerable<AlbumsRegistry.Core.Models.INameCityModel>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Strings.General_Headers_Name
                </th>
                <th>
                    @Strings.General_Headers_City
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new {id = item.Id})">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="@Strings.General_Actions_Edit"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
