@model AlbumsRegistry.Core.Models.Album

@{
    ViewBag.Title = Strings.Albums_Create_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h2>@Strings.Albums_Create_Title</h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">               
                <div class="form-group">
                    @Html.Label("Title", Strings.General_Headers_Title, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("ReleaseYear", Strings.General_Headers_ReleaseYear, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control", min = 1970 } })
                        @Html.ValidationMessageFor(model => model.ReleaseYear, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("ArtistId", Strings.General_Headers_Artist, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ArtistId", null, htmlAttributes: new { @class = "form-control" }, optionLabel: Strings.General_Dropdown_Select)
                        @Html.ValidationMessageFor(model => model.ArtistId, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("PublisherId", Strings.General_Headers_Publisher, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("PublisherId", null, htmlAttributes: new { @class = "form-control" }, optionLabel: Strings.General_Dropdown_Select)
                        @Html.ValidationMessageFor(model => model.PublisherId, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@Strings.General_Actions_Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        @Html.ActionLink(Strings.General_Actions_BackToList, "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
