@model IEnumerable<AlbumsRegistry.Core.Models.Album>

@{
    ViewBag.Title = Messages.Albums_Index_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Messages.Albums_Index_Title</h2>

<p>
    <a class="btn btn-default" href="@Url.Action("Create", "Albums")" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span>@Messages.Albums_Index_Add</span>
    </a>

    <span class="pull-right">@Messages.Albums_Index_Count: <b>@Model.Count()</b></span>
</p>
<table class="table">
    <tr>
        <th>
            @Messages.General_Headers_Artist
        </th>
        <th>
            @Messages.General_Headers_Title
        </th>
        <th>
            @Messages.General_Headers_Year
        </th>
        <th>
            @Messages.General_Headers_Publisher
        </th>
        <th>
            @Messages.General_Headers_TrackCount
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TracksCount)
        </td>
        <td>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            @Html.ActionLink(Messages.General_Actions_Edit, "Edit", new {id = item.Id})
        </td>
    </tr>
}

</table>
