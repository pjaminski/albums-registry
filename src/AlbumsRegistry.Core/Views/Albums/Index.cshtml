@model IEnumerable<AlbumsRegistry.Core.Models.Album>

@{
    ViewBag.Title = Strings.Albums_Index_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Strings.Albums_Index_Title</h2>

<style type="text/css">
    .search-form {
        width: 200px;
        float: right;
        padding-bottom: 5px;
        padding-right: 15px;
    }
</style>

<p>
    <a class="btn btn-default" href="@Url.Action("Create", "Albums")" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <span>@Strings.Albums_Index_Add</span>
    </a>

    <span class="pull-right">@Strings.Albums_Index_Count: <b>@Model.Count()</b></span>
</p>

<div class="row">
    <div class="search-form">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="@Strings.General_Actions_Search" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-default border-left-0">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Strings.General_Headers_Artist
        </th>
        <th>
            @Strings.General_Headers_Title
        </th>
        <th>
            @Strings.General_Headers_ReleaseYear
        </th>
        <th>
            @Strings.General_Headers_Publisher
        </th>
        <th>
            @Strings.General_Headers_TracksCount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TracksCount)
            </td>
            <td>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                @Html.ActionLink(Strings.General_Actions_Edit, "Edit", new {id = item.Id})
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/toastr")
    <script>
        $(function() {
            var msg = "@(TempData["Msg"] as string)";
            if (msg) {
                toastr.success(msg);
            }
        });
    </script>
}